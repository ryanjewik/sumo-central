    "matches": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "matchId": { "type": "integer" },
          "bashoId": { "type": "string" },
          "opponentId": { "type": "integer" },
          "result": { "type": "string" },
          "kimarite": { "type": "string" },
          "day": { "type": "integer" }
